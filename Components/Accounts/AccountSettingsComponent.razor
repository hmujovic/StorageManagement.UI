@inherits AccountSettingsViewModel;

@if (Loading)
{
    <MudProgressLinear Color="Color.Tertiary" Value="100" Size="Size.Medium" Style="margin-top: 10px;" Indeterminate="@Loading"/>
}
<MudText Typo="Typo.h5" style="margin: 30px 0px 0px 30px;" Color="@Color.Primary">Mein Konto</MudText>
<MudCard Elevation="4" Style="width 100%; margin: 30px 30px 0px 30px; border-color: var(--mud-palette-primary);  ">
    <MudCardContent>
        <MudGrid Spacing="0">
            <MudItem xs="12" sm="6" md="6" lg="4">
                <MudText Typo="Typo.subtitle2" Color="Color.Primary" style="font-weight:bold">Vorname</MudText>
                <MudText Typo="Typo.body1">@Account?.FirstName</MudText>

                <MudText Typo="Typo.subtitle2" style="margin-top: 10px;font-weight:bold" Color="Color.Primary">Nachname</MudText>
                <MudText Typo="Typo.body1">@Account?.LastName</MudText>

                <MudText Typo="Typo.subtitle2" style="margin-top: 10px; font-weight:bold" Color="Color.Primary">E-Mail</MudText>
                <MudText Typo="Typo.body1">@Account?.Email</MudText>

                @if (Account?.PhoneNumber != null)
                {
                    <MudText Typo="Typo.subtitle2" style="margin-top: 10px; font-weight:bold" Color="Color.Primary">PhoneNumber</MudText>
                    <MudText Typo="Typo.body1">@Account?.PhoneNumber</MudText>
                }

                @if (Account?.DateOfBirth != null)
                {
                    <MudText Typo="Typo.subtitle2" style="margin-top: 10px; font-weight:bold" Color="Color.Primary">Geburtsdatum</MudText>
                    <MudText Typo="Typo.body1">@Account?.DateOfBirth.Value.ToString("dd.MM.yyyy")</MudText>
                }
            </MudItem>
            <MudItem xs="12" sm="6" md="6" lg="6">
                @if (Account?.Country != null)
                {
                    <MudText Typo="Typo.subtitle2" style="margin-top: 10px; font-weight:bold" Color="Color.Primary">Geboren in</MudText>
                    <MudText Typo="Typo.body1">@Account?.Country</MudText>
                }
                @if (Account?.Address != null)
                {
                    <MudText Typo="Typo.subtitle2" style="margin-top: 10px; font-weight:bold" Color="Color.Primary">Straße und Hausnummer</MudText>
                    <MudText Typo="Typo.body1">@Account?.Address</MudText>
                }
                @if (Account?.City != null)
                {
                    <MudText Typo="Typo.subtitle2" style="margin-top: 10px; font-weight:bold" Color="Color.Primary">Ort</MudText>
                    <MudText Typo="Typo.body1">@Account?.City</MudText>
                }
                @if (Account?.PostalCode != null)
                {
                    <MudText Typo="Typo.subtitle2" Color="Color.Primary" style="font-weight:bold">PLZ</MudText>
                    <MudText Typo="Typo.body1">@Account?.PostalCode</MudText>
                }
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions Class="d-flex justify-end">
        <MudButton Color="Color.Secondary" Class="mr-2 d-flex justify-center" ButtonType="ButtonType.Submit" Variant="Variant.Filled" OnClick="() => OpenUpdateUser(Account)">
            Profil bearbeiten
        </MudButton>
        <MudButton Color="Color.Secondary" ButtonType="ButtonType.Submit" Variant="Variant.Filled" OnClick="OpenChangePassword">
            Passwort ändern
        </MudButton>
    </MudCardActions>
</MudCard>